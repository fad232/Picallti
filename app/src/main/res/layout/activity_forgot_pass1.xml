<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/backgroundPage"
    tools:context=".forgot_pass1"
    >

    <ImageView
        android:id="@+id/illustration"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/forgot_pass1_illu"

        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ForgotPassword"
        android:layout_below="@+id/illustration"
        android:layout_alignStart="@+id/illustration"
        android:fontFamily="@font/fontnew2bold"
        android:textColor="@color/titlePage"
        android:textSize="35sp"
        android:textAlignment="textEnd"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        android:textSize="35sp"
        android:fontFamily="@font/fontnew2bold"
        android:textColor="#023e8a"
        android:text=""/>

    <TextView
        android:id="@+id/contenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title2"
        android:layout_alignStart="@+id/title2"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/fontnew2"
        android:lineSpacingExtra="20sp"
        android:text="@string/forgotpasstext"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/contenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:width="300dp"
        android:background="@drawable/rounded_corners_edittext"
        android:drawableStart="@drawable/email1"
        android:drawablePadding="12dp"
        android:elevation="3dp"
        android:hint="@string/user_placeholder"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:textColorHint="@color/hint" />
    <android.widget.Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotpasslientext"
        android:layout_below="@+id/edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="300dp"
        android:fontFamily="@font/fontnew2bold"
        android:background="@drawable/shape_more_info_offre"
        android:elevation="2dp"
        android:backgroundTint="#4361ee"
        android:textColor="@color/textBoutton"
        />
    <TextView
        android:id="@+id/txtbacklogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp"
        android:text="@string/forgotpassback"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fontnew2bold"
        android:textSize="15sp"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:text="Send via SMS"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fontnew2bold"
        android:textSize="15sp"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        />


</RelativeLayout>